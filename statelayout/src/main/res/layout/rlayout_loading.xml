<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>

    </data>
    <RelativeLayout
        android:id="@+id/loadIng"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">
        <ProgressBar
            android:id="@+id/loadingIv"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">
        </ProgressBar>
        <TextView
            android:id="@+id/loadingTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="加载中"
            android:textSize="@dimen/db_statelayoutview_title_textsize"
            android:layout_below="@id/loadingIv">
        </TextView>
        <Button
            android:id="@+id/btIng"
            android:layout_width="@dimen/db_statelayoutview_bottom_width"
            android:layout_height="@dimen/db_statelayoutview_bottom_height"
            android:text="取消加载"
            android:textColor="@android:color/white"
            android:layout_below="@id/loadingTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/db_statelayoutview_bottom_textsize"
            android:background="@drawable/bottom_backage_style">
        </Button>
    </RelativeLayout>

</layout>