<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.home.exam.fragment.FlveFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorGray">
            <RelativeLayout
                android:id="@+id/my_login_Click"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@color/colorAccent"
                tools:ignore="MissingConstraints">
                <com.example.base.widget.CircularImageView
                    android:id="@+id/my_login_ivView"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/logo"
                    app:civ_border_color="#fff"
                    android:paddingTop="15dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="15dp"
                    app:civ_border_width="1dp"
                    android:clickable="false"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true">
                </com.example.base.widget.CircularImageView>
                <LinearLayout
                    android:id="@+id/my_login_conter_content"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_toRightOf="@id/my_login_ivView">
                    <TextView
                        android:id="@+id/my_login_tvView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="立即登录"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/sp_20"
                        android:textStyle="bold"
                        android:clickable="false"
                        ></TextView>

                    <TextView
                        android:id="@+id/my_login_viewInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="刷题考试通关好帮手"
                        android:textColor="@color/colorGray"
                        android:clickable="false"></TextView>
                </LinearLayout>
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/iv_right_arrow"
                    android:clickable="false"
                    android:background="#00000000"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"></ImageView>
            </RelativeLayout>>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/my_login_Click"
                app:layout_constraintBottom_toBottomOf="parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="我的订单"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorBlack"
                    android:background="@color/colorWhite"
                    android:layout_marginTop="1dp"
                    android:drawableRight="@drawable/iv_right_arrow">
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="修改密码"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorBlack"
                    android:background="@color/colorWhite"
                    android:layout_marginTop="1dp"
                    android:drawableRight="@drawable/iv_right_arrow">
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="我的订单"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorBlack"
                    android:background="@color/colorWhite"
                    android:layout_marginTop="10dp"
                    android:drawableRight="@drawable/iv_right_arrow">
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="用户隐私"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorBlack"
                    android:background="@color/colorWhite"
                    android:layout_marginTop="1dp"
                    android:drawableRight="@drawable/iv_right_arrow">
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="用户协议"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorBlack"
                    android:background="@color/colorWhite"
                    android:layout_marginTop="1dp"
                    android:drawableRight="@drawable/iv_right_arrow">
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="退出登录"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorBlack"
                    android:background="@color/colorWhite"
                    android:layout_marginTop="10dp"
                    android:drawableRight="@drawable/iv_right_arrow">
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="退出程序"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorBlack"
                    android:background="@color/colorWhite"
                    android:layout_marginTop="1dp"
                    android:drawableRight="@drawable/iv_right_arrow">
                </TextView>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</layout>